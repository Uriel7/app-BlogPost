#dialog_form.modal.inmodal
  .modal-dialog
    .modal-content
      .modal-body
        = form_for @post, remote: true do |f|
          .form-group
            = f.label :title, class: 'form-label'
            = f.text_field :title, class: 'form-control'
            %span.help-block.with-errors#title_error
          .form-group
            = f.label :content, class: 'form-label'
            = f.text_area :content, class: 'form-control'
            %span.help-block.with-errors#content_error
          .form-group
            = f.submit 'Guardar', class: 'btn btn-success'
            = link_to 'Cancelar', '#', class: 'btn btn-danger btn-cancel'
